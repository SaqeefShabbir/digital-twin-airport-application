{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "label": "npm: start",
      "detail": "ng serve",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*?Compiling.*$",
          "endsPattern": "^.*?Compiled successfully.*$|^.*?Failed to compile.*$"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "npm",
      "script": "build",
      "label": "npm: build",
      "detail": "ng build",
      "group": "build",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "terminate-npm-start",
      "type": "process",
      "command": "echo",
      "args": [
        "terminate-npm-start"
      ],
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "dependsOn": "terminate-npm-windows"
    },
    {
      "label": "terminate-npm-windows",
      "type": "process",
      "command": "taskkill",
      "args": [
        "/F",
        "/IM",
        "node.exe"
      ],
      "windows": {
        "command": "taskkill",
        "args": [
          "/F",
          "/IM",
          "node.exe"
        ]
      },
      "osx": {
        "command": "pkill",
        "args": [
          "-f",
          "ng serve"
        ]
      },
      "linux": {
        "command": "pkill",
        "args": [
          "-f",
          "ng serve"
        ]
      },
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "terminate-npm-build",
      "type": "process",
      "command": "echo",
      "args": [
        "terminate-npm-build"
      ],
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "dependsOn": "terminate-npm-windows"
    }
  ]
}